<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical"
    android:stretchColumns="*"
    android:background="@color/white"
    android:baselineAligned="true"
    android:weightSum="1">

    <TextView
        android:id="@+id/ready_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:minWidth="32dp"
        android:padding="10dp"
        android:textColor="#1643d7"
        android:textSize="15dp"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/game_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:minWidth="32dp"
        android:minHeight="48dp"
        android:padding="10dp"
        android:textColor="#1966ea"
        android:textSize="15dp"
        tools:ignore="SpeakableTextPresentCheck" />


    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_above="@+id/ReadyMenu"
        android:layout_alignRight="@+id/game_value"/>


    <Button
        android:id="@+id/ReadyMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="0.01"
        android:background="#aba9a6"
        android:text="@string/Ready_label"
        android:textColor="#455A64"
        android:textSize="20dp"
        android:textStyle="bold" />

</LinearLayout>