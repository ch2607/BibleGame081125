<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:tag="layout-normal"
    android:background="@drawable/newgame"
    tools:context=".Main">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="475dp"
        android:layout_height="259dp"
        android:background="#0000ffff"
        app:layout_constraintBottom_toTopOf="@+id/choose_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/newgames" />

    <Button
        android:id="@+id/choose_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#0000ffff"
        android:drawableStart="@mipmap/yandn"
        android:text="@string/easy_label"
        android:textColor="#F8F2F2"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.051"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/yandn_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#0000ffff"
        android:drawableStart="@mipmap/choose"
        android:text="@string/medium_label"
        android:textColor="#FBF8F8"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.536"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/fill_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#0000ffff"
        android:drawableStart="@mipmap/org"
        android:text="@string/hard_label"
        android:textColor="#FAF6F6"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.948"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />


</androidx.constraintlayout.widget.ConstraintLayout>